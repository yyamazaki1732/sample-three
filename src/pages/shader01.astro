---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro.">

	<main>
		<canvas id="myCanvas"></canvas>
	</main>
	<!-- ===============================================
	 # vertex
	================================================ -->
	<script id="v-shader" type="x-shader/x-vertex">
	varying vec2 vUv;
		void main() {
			// uv: ShaderMaterialで補完される vec2 型(xy)の変数。テクスチャ座標のこと。
			vUv = uv;

			// position: ShaderMaterialで補完される vec3 型(xyz)の変数。ジオメトリの頂点のこと。
			vec3 pos = position;

			gl_Position = vec4( pos, 1 );
		}
	</script>
	<!-- ===============================================
	 # fragment
	================================================ -->
	<script id="f-shader" type="x-shader/x-fragment">
	varying vec2 vUv;
	void main() {
		// position: ShaderMaterialで補完される vec3 型(xyz)の変数。ジオメトリの頂点のこと。
		vec4 color = vec4( vUv.y, vUv.x, 0.0, 1 );// テクスチャ座標を r g に入れる
		// vec4 color = vec4( vUv.x, vUv.y, 0.7, 1.0 );// テクスチャ座標を r g に入れる
		gl_FragColor = color;
	}
	</script>

</Layout>
<script src="../scripts/shader01.js"></script>