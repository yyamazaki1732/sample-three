---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- <script src="https://unpkg.com/three@0.147.0/build/three.min.js"></script> -->
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style is:global>
      ul {
        list-style: none;
      }
    </style>
    <style is:global>
      * {
        margin: 0;
        padding: 0;
      }

      html {
        height: 100%;
      }

      body {
        margin: 0;
        height: 100%;
        background-color: #000;
      }

      #canvas-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
      }
      #canvas-container canvas {
        display: block;
        width: 100%;
        height: 100%;
      }

      #scroll-container {
        position: relative;
        width: 100%;
        height: 200vh;
      }

      #scroll-container_title {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);

        color: #fff;
        font-size: 7em;
        letter-spacing: 0.05em;
        font-family: sans-serif;
        font-style: italic;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
